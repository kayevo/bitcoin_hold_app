<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BitcoinHold" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary_dark_blue</item>

        <!-- Font style -->
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">sans-serif</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/primary_dark_blue</item>

        <!-- Edit Text-->
        <!--this changes the filled colour of the MDC Filled EditText-->
        <!--this also changes the color of the hint font and helper text too-->
        <item name="colorOnSurface">@color/green</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!-- Default -->
    <style name="ContainedButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_dark_blue</item>
    </style>

    <!-- Portfolio -->
    <style name="PortfolioMenuButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">10sp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Settings -->
    <style name="SettingsMenuButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">10sp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:backgroundTint">@color/primary_light_blue</item>
    </style>
</resources>