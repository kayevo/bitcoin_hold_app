<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BitcoinHold" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary_dark_blue</item>

        <!-- Font style -->
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">sans-serif</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/primary_dark_blue</item>
    </style>

    <!-- Buttons -->
    <style name="ContainedButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_dark_blue</item>
    </style>
</resources>